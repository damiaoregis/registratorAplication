<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
    "xwork-validator-1.0.3.dtd">
<validators>
    <validator type="requiredstring">
        <param name="fieldName">firstName</param>
        <message>First Name is required</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldName">lastName</param>
        <message>Last Name is required</message>
    </validator>
    <validator type="required">
        <param name="fieldName">gender</param>
        <message>Gender is required</message>
    </validator>
    <validator type="required">
        <param name="fieldName">age</param>
        <message>Age is required</message>
    </validator>
    <validator type="int">
        <param name="fieldName">age</param>
        <param name="min">18</param>
        <message>Age must be greater than or equal to ${min}</message>
    </validator>
    <field name="email">
       <field-validator type="requiredstring">
          <message>Email is required</message>
       </field-validator>
       <field-validator type="email">
          <message>Must provide a valid email</message>
       </field-validator>

    </field>
</validators>